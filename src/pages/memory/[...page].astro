---
import { type CollectionEntry, getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import Notice from '../../components/Notice.astro';
import Calender from '../../components/Calender';
import type { Date } from '../../types/date';

export async function getStaticPaths() {
  const posts = await getCollection('memory');
  const today = new Date();
  const year = today.getFullYear();
  const month = today.getMonth() + 1;
  const day = today.getDate();

  const currentPost = posts.find((post) => {
    const [postYear, postMonth, postDay] = post.slug.split('-').map(Number);
    return postYear === year && postMonth === month && postDay === day;
  });

  const totalPosts = posts.length;
  const datesPosted = posts.map(({ slug }) => {
    const [year, month, day] = slug.split('-');
    return { year: parseInt(year), month: parseInt(month), day: parseInt(day) };
  });

  return [
    {
      params: { page: undefined },
      props: {
        currentPost,
        totalPosts,
        datesPosted,
        currentDate: { year, month, day },
      },
    },
  ];
}

type Props = {
  currentPost: CollectionEntry<'memory'> | undefined;
  totalPosts: number;
  datesPosted: Date[];
  currentDate: Date;
};

const { currentPost, totalPosts, datesPosted, currentDate } = Astro.props;
const { year, month, day } = currentDate;
const Content = currentPost ? (await currentPost.render()).Content : null;
---

<BaseLayout
  title="Memory"
  description="Embark on a journey of personal insights and experiences through my blog"
  image={{ src: '/dante-preview.jpg', alt: 'The preview of the site' }}
  showHeader={false}
>
  <div class="grid grid-cols-2 gap-6 sm:grid sm:grid-cols-2">
    <div>
      <div class="mb-1 text-sm text-gray-400">달력</div>
      <Calender
        datesPosted={datesPosted}
        currentYear={year}
        currentMonth={month}
        currentDay={day}
        client:load
      />
    </div>
    <div>
      <div class="mb-1 text-sm text-gray-400">기록</div>
      <Notice totalPosts={totalPosts} year={year} month={month} />
    </div>
    {Content && (
      <div class="col-span-2">
        <div class="mb-1 text-sm text-gray-400">
          {year}.{month < 10 ? `0${month}` : month}.{day}
        </div>
        <div
          class="mdx prose prose-dante max-w-none rounded-lg bg-white p-7 shadow"
        >
          <Content />
        </div>
      </div>
    )}
  </div>
</BaseLayout>
